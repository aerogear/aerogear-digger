{
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "android-config-pv"
  },
  "spec": {
    "capacity": {
      "storage": "500Mi"
    },
    "accessModes": [
      "ReadWriteOnce"
    ],
    "persistentVolumeReclaimPolicy": "Recycle",
    "hostPath": {
      "path": "/tmp/build-farm/android-config"
    }
  }
}