{
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "android-sdk-pv1"
  },
  "spec": {
    "capacity": {
      "storage": "10Gi"
    },
    "accessModes": [
      "ReadWriteOnce"
    ],
    "persistentVolumeReclaimPolicy": "Retain",
    "glusterfs":{
    	"endpoints": "gluster",
    	"path": "android-sdk",
    	"readOnly": "false"
    }
  }
}